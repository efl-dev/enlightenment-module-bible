               inherit           : "default" 0.0;
               visible           : 1;
               image.normal      : "module_icon_world_black.png";
            }
         }
         part {
            name : "klick1";
            type : RECT;
            description {
               state         : "default" 0.0;
               visible: 1;
               color: 255 255 255 0;
               rel1.to       : "tageslosung";
               rel1.relative     : 0.0 0.0;
               rel2.to       : "tageslosung";
               rel2.relative     : 1.0 1.0;
            }
         }
      programs {
         program {
            name: "mouse_in_popup";
            signal: "mouse,down,1";
            source: "klick1";
            in:     0.5 0.0;
            action: SIGNAL_EMIT "show_popup" "show_popup";
         }
